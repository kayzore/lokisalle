{% macro textarea(textLabel, id, placeholder, colLabel, colDiv, errors, keyError, value) %}
    <label class="col-{{ colLabel }} control-label" for="{{ id }}Textarea">{{ textLabel }}</label>
    <div class="col-{{ colDiv }}">
        <textarea class="form-control" id="{{ id }}Textarea" name="{{ id }}Textarea"
                  placeholder="{{ placeholder }}" style="resize: vertical">{{ value }}</textarea>
        {{ _self.getErrorMsg(errors, keyError) }}
    </div>
{% endmacro %}

{% macro getErrorMsg(errors, keyError) %}
    {% if errors[keyError] %}
        <span class="help-block">{{ errors[keyError] }}</span>
    {% endif %}
{% endmacro %}

{% macro getErrorClass(errors, keyError) %}
    {% if errors[keyError] %}
        has-error
    {% endif %}
{% endmacro %}
