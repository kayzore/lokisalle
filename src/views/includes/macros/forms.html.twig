{% macro input(textLabel, id, type, colLabel, colDiv, placeholder, value, errors, keyError) %}
    {% set idInput = id ~ 'Input' %}
    <label class="col-{{ colLabel }} control-label"
           for="{{ id }}Input">{{ textLabel }}</label>
    <div class="col-{{ colDiv }}">
        <input id="{{ id }}Input" name="{{ id }}Input" {% if placeholder is defined %}placeholder="{{ placeholder }}"{% endif %}
               class="{% if type == 'text' or type == 'password' or type == 'email' %}form-control{% endif %}" type="{{ type }}"
               value="{{ value }}">
        {{ _self.getErrorMsg(errors, keyError) }}
    </div>
{% endmacro %}

{% macro inputDateTimePicker(textLabel, id, type, colLabel, colDiv, placeholder, value, errors, keyError) %}
    {% set idInput = id ~ 'Input' %}
    <label class="col-{{ colLabel }} control-label" for="{{ id }}Input">{{ textLabel }}</label>
    <div class="col-{{ colDiv }}">
        <input id="{{ id }}Input" name="{{ id }}Input" class="form-control datetimepickerAdmin" type="text" value="{{ value }}">
        {{ _self.getErrorMsg(errors, keyError) }}
    </div>
{% endmacro %}

{% macro select(textLabel, id, options, colLabel, colDiv, selectedValue, errors, keyError) %}
    <label class="col-{{ colLabel }} control-label" for="{{ id }}Select">{{ textLabel }}</label>
    <div class="col-{{ colDiv }}">
        <select id="{{ id }}Select" name="{{ id }}Select" class="form-control">
            {% for option in options %}
                <option value="{{ loop.index0 }}" {% if selectedValue == loop.index0 %}selected="selected"{% endif %}>
                    {{ option|raw|nl2br }}
                </option>
            {% endfor %}
        </select>
        {{ _self.getErrorMsg(errors, keyError) }}
    </div>
{% endmacro %}

{% macro selectProduits(textLabel, id, options, colLabel, colDiv, selectedValue, errors, keyError) %}
    <label class="col-{{ colLabel }} control-label" for="{{ id }}Select">{{ textLabel }}</label>
    <div class="col-{{ colDiv }}">
        <select id="{{ id }}Select" name="{{ id }}Select" class="form-control">
            {% for option in options %}
                <option value="{{ option.id }}" {% if selectedValue == option.id %}selected="selected"{% endif %}>
