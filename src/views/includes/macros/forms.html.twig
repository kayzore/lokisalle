{% macro selectAvis(textLabel, id, options, colLabel, colDiv, selectedValue, errors, keyError) %}
    <label class="col-{{ colLabel }} control-label" for="{{ id }}Select">{{ textLabel }}</label>
    <div class="col-{{ colDiv }}">
        <select id="{{ id }}Select" name="{{ id }}Select" class="form-control">
            {% for option in options %}
                <option value="{{ option }}" {% if selectedValue == option %}selected="selected"{% endif %}>
